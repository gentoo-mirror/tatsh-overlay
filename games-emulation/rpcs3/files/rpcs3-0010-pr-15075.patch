 #endif
-#endif

 #ifdef _WIN32
 constexpr SOCKET invalid_socket = INVALID_SOCKET;

diff --git a/Utilities/Thread.cpp b/Utilities/Thread.cpp
index a81117e2d0a8..8e536c054191 100644
--- a/Utilities/Thread.cpp
+++ b/Utilities/Thread.cpp
